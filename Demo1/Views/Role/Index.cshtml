@model IEnumerable<IdentityRole>

    <h1 style="        background: #fcdb8d;
        color: #333333">All Roles</h1>
    <a asp-action="Create" class="btn btn-secondary">Create a Role</a>

    <table class="table table-sm table-bordered table-bordered">
        <tr><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td i-role="@role.Id"></td>
                <td><a class="btn btn-sm btn-info" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
</table>